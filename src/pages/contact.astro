---
import Contactform from '@components/contactform.astro';
import Container from '@components/container.astro';
import Sectionhead from '@components/sectionhead.astro';
import Layout from '@layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">I'm here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-mandys-pink-400">Contact Fred</h2>
        <p class="text-lg leading-relaxed text-mandys-pink-400 mt-3">
          Need a hand? I'm here to help. Fill up the form or send email or call
          phone.
        </p>
        <div class="mt-5">
          <!-- <div class="flex items-center mt-2 space-x-2 text-mandys-pink-400">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>1734 Sanfransico, CA 93063</span>
          </div> -->
          <div class="flex items-center mt-2 space-x-2 text-mandys-pink-400">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:hello@freds.help">hello@freds.help</a
            >
          </div><div
            class="flex items-center mt-2 space-x-2 text-mandys-pink-400">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+447888994391">+447888 994 391</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
